


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>subtotal</th>
      <th>Category</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	<% @cart_items.each do |a| %>
		<tr>
			<td><%= a.item.name %></td>
			<td><%= a.quantity %></td>
			<td><%= a.price  %></td>
			<td><%= a.subtotal  %></td>>

      <td><%#= a.item.category.name %></td>
      <td><%#= a.description%></td>
			<td><%#= a.item.category.name %></td>
			<td><%#= a.description%></td>
			<td><%= link_to 'Show', a %></td>
      <td><%= link_to 'Edit', edit_product_path(a) %></td>
      <td>  <%= link_to cart_item_remove_path(a) do %>
               remove         
            <% end %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
